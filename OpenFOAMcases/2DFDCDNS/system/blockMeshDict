FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale   1;

// L:length, H:height, W:width
L       1; // #eval{ pi() };
H       1;
H2      #eval{ 2*$H };
W       #eval{ 4.0/3.0*pi() };

vertices
(
    ( 0   0   0)
    ($L   0   0)
    ($L  $H   0)
    ($L $H2   0)
    ( 0 $H2   0)
    ( 0  $H   0)

    ( 0   0  $W)
    ($L   0  $W)
    ($L  $H  $W)
    ($L $H2  $W)
    ( 0 $H2  $W)
    ( 0  $H  $W)
);

ySpacing1 (
    ( 400 100 100)
    (4800 240 1 )
);
ySpacing2 (
    (4800 240 1   )
    ( 400 100 0.01)
);


blocks
(
    hex ( 0  1  2  5  6  7  8 11) (30 340 1) simpleGrading (1 $ySpacing1 1)
    hex ( 5  2  3  4 11  8  9 10) (30 340 1) simpleGrading (1 $ySpacing2 1)
);

boundary
(
    bottom
    {
        type            wall;
        faces           ((0 6 7 1));
    }
    top
    {
        type            wall;
        faces           ((4 3 9 10));
    }
    left
    {
        type            empty;
        faces           ((1 2 5 0)(2 3 4 5));
    }
    right
    {
        type            empty;
        faces           ((6 11 8 7)(11 10 9 8));
    }
    inlet
    {
        type            cyclic;
        neighbourPatch  outlet;
        faces           ((0 5 11 6)(5 4 10 11));
    }
    outlet
    {
        type            cyclic;
        neighbourPatch  inlet;
        faces           ((1 7 8 2)(2 8 9 3));
    }
);


